    "compilerOptions": {
        "declaration": true,
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums":true,
        "outDir": ".tmp",
        "sourceMap": true,

        "allowJs": true,
        "checkJs": true,
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
    ],
    "exclude": [
    ]
}