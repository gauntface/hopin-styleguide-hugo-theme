{
    "compilerOptions": {
        "declaration": true,
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums":true,
        "sourceMap": true,

        "allowJs": true,
        "checkJs": true,
        "outDir": "theme/assets/styleguide/js",
    },
    "include": [
        "theme/**/*.js",
        "theme/**/*.ts",
    ],
    "exclude": [
    ]
}